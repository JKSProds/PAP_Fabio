@model PAP_Fabio.Models.Utilizador
@{
    ViewData["Title"] = "Novo Utilizador";
}

<div class="text-center">

    <p>&nbsp</p>
    <form asp-action="Novo">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container">

            <div class="row col-12">

                <div class="col-12 row">

                    <h1>Novo Utilizador</h1>

                    <input asp-for="ID" class="form-control" type="hidden" readonly />

                    <div class="form-group col-6">
                        <label asp-for="codigoAluno" class="control-label"></label>
                        <input asp-for="codigoAluno" class="form-control" />
                        <span asp-validation-for="codigoAluno" class="text-danger"></span>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!--<div class="form-group col-6">
        <label asp-for="Pass" class="control-label"></label>
        <input type="text" asp-for="Pass" id="password" class="form-control" />
        <span asp-validation-for="Pass" class="text-danger"></span>
    </div>-->

                    <div class="form-group col-6">
                        <label asp-for="Pass" class="control-label"></label>
                        <input asp-for="Pass" class="form-control" />
                        <span asp-validation-for="Pass" class="text-danger"></span>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="tipo" class="control-label"></label>
                        <select asp-for="tipo" class="form-control">
                            <option></option>
                            <option value="1">Professor</option>
                            <option value="2">Funcionário</option>
                            <option value="3">Aluno</option>
                        </select>
                    </div>

                    <div class="form-group col-12">
                        <input type="checkbox" asp-for="admin" class="form-control">
                        <label asp-for="admin"> Admin </label><br>
                        <span asp-validation-for="admin" class="text-danger"></span>
                    </div>

                    <div class="form-group col-12">

                        <!-- Button trigger modal -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block" style="background-color: #236954;" data-toggle="modal" data-target="#exampleModal">
                            i class="fas fa-save"></i> Criar Novo Utilizador
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        ...
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Criar</button>
                                        <button type="button" class="btn btn-primary">Guardar</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

                </div>

        </div>

    </form>

</div>


